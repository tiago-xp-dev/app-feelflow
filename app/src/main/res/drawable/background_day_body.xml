<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/grey_50_opacity"/>
            <corners android:radius="4dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <stroke android:width="1.5dp" android:color="@color/grey_80_opacity"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>